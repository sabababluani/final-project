{
  "all": true,
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.integration.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.d.ts",
    "src/migrations/**",
    "src/main.ts",
    "typeorm.config.ts"
  ],
  "reporter": ["html", "text", "text-summary", "lcov"],
  "report-dir": "coverage",
  "clean": true,
  "skip-full": false,
  "check-coverage": false,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80
}

